<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/pref_collage_category_title"
        app:iconSpaceReserved="false">
        <EditTextPreference
            android:key="@string/key_pref_username"
            android:selectAllOnFocus="true"
            android:singleLine="true"
            android:title="@string/pref_username_title"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="3"
            android:entries="@array/collage_size_names_array"
            android:entryValues="@array/collage_size_values_array"
            android:key="@string/key_pref_size"
            android:title="@string/pref_size_title"
            app:iconSpaceReserved="false" />
        <ListPreference
            android:defaultValue="7day"
            android:entries="@array/collage_period_names_array"
            android:entryValues="@array/collage_period_values_array"
            android:key="@string/key_pref_period"
            android:title="@string/pref_date_range_title"
            app:iconSpaceReserved="false" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="@string/key_pref_artists"
            android:title="@string/pref_artists_title"
            app:iconSpaceReserved="false" />
    </PreferenceCategory>

</PreferenceScreen>